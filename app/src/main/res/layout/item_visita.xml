<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fotoUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogoCompany"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_item"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"/>

            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6EC67A"
                android:text="Toca visita"
                android:textColor="#FFF"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6EC67A"
                android:textColor="#FFF"
                android:text="21-04-2018"
                android:textAlignment="center" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/fotoUser" >



            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Nombre:"
                android:singleLine="true"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/palomitaView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/paloma1"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>




            <TextView
                android:id="@+id/tv_datos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="DATOS GENERALES"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:layout_below="@+id/tvNombre"/>

            <View
                android:id="@+id/divider"
                android:layout_below="@id/tv_datos"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#E91A8D" />


            <TextView
                android:id="@+id/tvCurp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="CURP:"
                android:singleLine="true"
                android:layout_below="@+id/divider"
                android:layout_toRightOf="@+id/textViewCURP"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/textViewCurp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="CURP:"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_below="@+id/divider"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="DIRECCIÓN:"
                android:layout_below="@+id/tvCurp"
                android:layout_toRightOf="@+id/textViewDireccion"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textViewDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="DIRECCIÓN:"
                android:textStyle="bold"
                android:layout_below="@+id/tvCurp"
                android:layout_marginTop="10dp" />




        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
