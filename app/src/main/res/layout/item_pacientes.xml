<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogoCompany"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_item"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Nombre:"
                android:singleLine="true"
                android:layout_toRightOf="@id/imgLogoCompany"
                android:layout_marginTop="10dp" />





            <TextView
                android:id="@+id/tv_datos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="DATOS GENERALES"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:layout_toRightOf="@id/imgLogoCompany"
                android:layout_below="@+id/tvNombre"/>

            <View
                android:id="@+id/divider"
                android:layout_below="@id/tv_datos"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/imgLogoCompany"
                android:background="#E91A8D" />



            <TextView
                android:id="@+id/tvCurp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="CURP:"
                android:singleLine="true"
                android:layout_toRightOf="@id/imgLogoCompany"
                android:layout_below="@+id/divider"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="DIRECCIÃ“N:"
                android:singleLine="true"
                android:layout_toRightOf="@id/imgLogoCompany"
                android:layout_below="@+id/tvCurp"
                android:layout_marginTop="10dp" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
